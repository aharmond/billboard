<h1 class="ui center aligned header"><%= @artist.id ? 'Edit Artist Name' : 'Add Artist' %></h1>
<div class="ui form">
  <%= form_with(model: @artist, local: true) do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, required: true, placeholder: "Artist Name" %>
    </div>
    <div class="field">
      <%= f.label :genre %>
      <%= f.text_field :genre, required: true, placeholder: "Artist Genre" %>
    </div>
  <button class="ui green button" type="submit">Submit</button>
  <% end %>
</div>
<div class="ui hidden divider"></div>
<%= link_to 'Back', @artist.id ? artist_path(@artist) : artists_path, class: "ui basic button" %>